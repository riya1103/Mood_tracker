# Backend Configuration

# Server Port
PORT=5000

# MongoDB Connection URI
# For local development: mongodb://localhost:27017/mood-tracker
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/mood-tracker
MONGODB_URI=mongodb://localhost:27017/mood-tracker

# JWT Secret Key (change this to a secure random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:19000

# Environment
NODE_ENV=development
